{
  "name": "atomicbot-desktop",
  "private": true,
  "version": "0.0.2",
  "description": "Atomic Bot makes things for you",
  "type": "commonjs",
  "main": "dist/main.js",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "npm run build && npm run build:renderer && npm run fetch:gog && npm run prepare:gog:credentials && cross-env ELECTRON_RUN_AS_NODE= electron .",
    "build": "tsc -p tsconfig.json",
    "build:renderer": "vite build --config renderer/vite.config.ts",
    "prepare:all": "npm run prepare:openclaw && npm run prepare:node && npm run fetch:gog && npm run prepare:gog:credentials && npm run prepare:gog",
    "prepare:openclaw": "node scripts/prepare-openclaw-bundle.mjs",
    "prepare:node": "node scripts/prepare-node-runtime.mjs",
    "fetch:gog": "node scripts/fetch-gog-runtime.mjs",
    "prepare:gog:credentials": "node --env-file=.env scripts/prepare-gog-credentials.mjs",
    "prepare:gog": "node scripts/prepare-gog-runtime.mjs",
    "reset:local": "node scripts/reset-local-state.mjs",
    "reset:local:yes": "node scripts/reset-local-state.mjs --yes",
    "dist:local": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run dist -- --publish never",
    "dist": "npm run build && npm run build:renderer && npm run prepare:openclaw && npm run prepare:node && npm run fetch:gog && npm run prepare:gog:credentials && npm run prepare:gog && electron-builder",
    "dist:env": "npm run build && npm run build:renderer && npm run prepare:openclaw && npm run prepare:node && npm run fetch:gog && npm run prepare:gog:credentials && npm run prepare:gog && node --env-file=.env ./node_modules/electron-builder/out/cli/cli.js",
    "dist:env:local": "CSC_IDENTITY_AUTO_DISCOVERY=false npm run dist:env -- --publish never"
  },
  "devDependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-markdown": "^10.1.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.13.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "json5": "^2.2.3"
  },
  "build": {
    "appId": "ai.atomicbot.desktop",
    "productName": "Atomic Bot",
    "afterPack": "scripts/electron-builder.afterPack-sign-extra-resources.cjs",
    "afterSign": "scripts/electron-builder.afterSign-notarize.cjs",
    "afterAllArtifactBuild": "scripts/electron-builder.afterAllArtifactBuild-notarize-dmg.cjs",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "renderer/dist/**",
      "assets/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/icon.png",
        "to": "assets/icon.png"
      },
      {
        "from": "assets/trayTemplate.png",
        "to": "assets/trayTemplate.png"
      },
      {
        "from": "assets/trayTemplate@2x.png",
        "to": "assets/trayTemplate@2x.png"
      },
      {
        "from": "vendor/openclaw",
        "to": "openclaw"
      },
      {
        "from": "vendor/openclaw/node_modules",
        "to": "openclaw/node_modules",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "vendor/node",
        "to": "node"
      },
      {
        "from": "vendor/gog",
        "to": "gog"
      },
      {
        "from": ".gog-runtime/credentials",
        "to": "gog-credentials"
      }
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ]
    }
  }
}
